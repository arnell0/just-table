{
  "name": "just-table",
  "main": "dist/index.min.js",
  "version": "0.2.4",
  "private": false,
  "babel": {
    "presets": [
      "@babel/preset-react"
    ]
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "minify": "minify dist/index.js > dist/index.min.js && rm dist/index.js",
    "pre-publish": "rm -rf dist && mkdir dist &&  babel src/just-table -d dist --copy-files && npm run minify && npm uninstall just-table && npm install"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.22.5",
    "@babel/plugin-proposal-private-property-in-object": "^7.16.7",
    "@babel/preset-react": "^7.22.5",
    "minify": "^10.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1"
  }
}
